{
    "name": "vscode-phpunit",
    "displayName": "vscode-phpunit",
    "description": "",
    "publisher": "recca0120",
    "version": "0.0.1",
    "private": true,
    "license": "MIT",
    "enabledApiProposals": [
        "testCoverage"
    ],
    "engines": {
        "vscode": "^1.68.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:*.md"
    ],
    "main": "./dist/extension.js",
    "prettier": {
        "printWidth": 100,
        "singleQuote": true,
        "tabWidth": 4,
        "useTabs": false
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js",
        "jest": "jest",
        "jest:watch": "jest --watch-all",
        "download-api": "vscode-dts main && vscode-dts dev",
        "postinstall": "npm run download-api"
    },
    "devDependencies": {
        "@types/chai": "^4.3.3",
        "@types/glob": "^8.0.0",
        "@types/jest": "^29.2.0",
        "@types/mocha": "^10.0.0",
        "@types/node": "16.x",
        "@types/sinon": "^10.0.13",
        "@typescript-eslint/eslint-plugin": "^5.38.1",
        "@typescript-eslint/parser": "^5.38.1",
        "@vscode/test-electron": "^2.1.5",
        "chai": "^4.3.6",
        "eslint": "^8.24.0",
        "glob": "^8.0.3",
        "jest": "^29.2.1",
        "mocha": "^10.0.0",
        "sinon": "^14.0.1",
        "ts-jest": "^29.0.3",
        "ts-loader": "^9.4.1",
        "typescript": "^4.8.4",
        "vscode-dts": "^0.3.3",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.10.0"
    },
    "dependencies": {
        "@types/yargs-parser": "^21.0.0",
        "php-parser": "^3.1.1",
        "yargs-parser": "^21.1.1"
    }
}

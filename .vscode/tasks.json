// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "phpunit: watch",
			"type": "shell",
			"command": "pnpm --filter @vscode-phpunit/phpunit watch",
			"group": "build",
			"isBackground": true,
			"problemMatcher": {
				"pattern": {
					"regexp": "^(ERROR|WARNING)\\s+(.*)$",
					"file": 2,
					"message": 0
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^CLI Building",
					"endsPattern": "^(ESM|CJS|DTS) ⚡️ Build success"
				}
			},
			"presentation": {
				"reveal": "silent",
				"group": "watchers"
			}
		},
		{
			"label": "phpunit: build",
			"type": "shell",
			"command": "pnpm --filter @vscode-phpunit/phpunit build",
			"group": "build",
			"presentation": {
				"reveal": "silent",
				"group": "watchers"
			}
		},
		{
			"type": "npm",
			"script": "watch",
			"path": "packages/extension",
			"problemMatcher": "$esbuild-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"group": "watchers"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"dependsOn": ["phpunit: watch"]
		},
		{
			"type": "npm",
			"script": "watch-tests",
			"path": "packages/extension",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"group": "watchers"
			},
			"group": "build"
		},
		{
			"label": "tasks: watch-tests",
			"dependsOn": [
				"npm: watch - packages/extension",
				"npm: watch-tests - packages/extension"
			],
			"problemMatcher": []
		}
	]
}
